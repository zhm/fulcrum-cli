{
  "include": ["src/**/*"],
  "compilerOptions": {
    "target": "es2020",
    "sourceMap": true,
    "outDir": "dist",
    "strict": false,
    "lib": ["esnext"],
    "module": "NodeNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "esModuleInterop": true,
    "noImplicitAny": false
  }
}